/* pages/chargeCabinet/chargeCabinet.wxss */

page {
  background-color: #f6f9f6;
}

.full-container {
  background-color: #f6f9f6;
  padding-top: 15rpx;
}

.mainButton {
  width: 92%;
  height: 96rpx;
  background-color: #09508e;
  text-align: center;
  line-height: 96rpx;
  color: white;
  margin: 100rpx auto;
}

.title {
  font-size: 30rpx;
  color: #333;
  padding-left: 30rpx;
  padding-top: 20rpx;
  font-weight: 500;
}

.cabinet-info-bg {
  height: 220rpx;
  padding-top: 50rpx;
  margin-bottom: 1rpx solid #ddd;
  background-color: #ddd;
  border-radius: 10rpx;
  margin: 60rpx 30rpx 30rpx 30rpx;
}

.gray-bg {
  background-color: #f6f9f6;
}

.user-name {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin-top: 15rpx;
  font-size: 36rpx;
  color: #fff;
}

.wallet {
  color: #333;
  font-size: 30rpx;
  text-align: right;
  margin-right: 30rpx;
  padding-bottom: 50rpx;
}

.cabinet-info {
  color: #333;
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.count-right {
  width: 50%;
  float: right;
}
