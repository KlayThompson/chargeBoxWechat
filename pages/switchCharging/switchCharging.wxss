.full-container {
  background-color: #f6f9f6;
  height: 100%;
}

.charging-img {
  height: 500rpx;
  background-color: #3ea874;
  position: relative;
  padding-top: 40rpx;
}

.charging-status {
  width: 400rpx;
  height: 360rpx;
  margin: 0 auto;
  position: relative;
}

.distance-info {
  position: absolute;
  top: 75rpx;
  left: 0rpx;
  right: 0rpx;
}

.distance-add-title {
  display: block;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.order-km-form {
  font-size: 26rpx;
  opacity: 0.6;
  color: #fdfff7;
  text-align: center;
}

.charging-elec-number {
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  bottom: 10rpx;
  left: 0rpx;
  right: 0rpx;
  color: #fff;
}

.charging-status-img {
  width: 100%;
  height: 100%;
}

.charging-add-distandce {
  font-size: 90rpx;
  color: #fff;
  text-align: center;
  display: block;
  margin-top: 40rpx;
}

.order-wave-bk {
  position: absolute;
  height: 110rpx;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
}

.order-wave-img {
  z-index: 10;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  height: 110rpx;
  width: 100%;
}

.stop-charging-btn {
  width: 212rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #8ae989;
  z-index: 999;
}

.charging-info-item {
  height: 80rpx;
  line-height: 80rpx;
  margin: 0rpx 40rpx;
  padding-right: 60rpx;
}

.charging-info-title {
  font-size: 32rpx;
  color: #262930;
  opacity: 0.6;
}

.info-has-border {
  border-bottom: 2rpx solid #ddd;
}

.charging-info {
  margin: 30rpx 0rpx;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  background-color: #fff;
}

.charging-info-value {
  float: right;
  font-size: 28rpx;
  color: #262930;
}

.charging-info-item-detail {
  line-height: 50rpx;
  margin: 0rpx 60rpx;
  margin-top: 10rpx;
}

.each-cahrging-icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 17rpx;
  margin-right: 6rpx;
}

.each-cahrging-icon image {
  width: 100%;
  height: 100%;
}

.each-charging-fee {
  height: 60rpx;
  margin: 0 40rpx;
  line-height: 60rpx;
}

.charging-info-detail-title {
  font-size: 28rpx;
  color: #262930;
  opacity: 0.6;
  float: left;
}

.charging-fee-total-pay {
  height: 86rpx;
  margin: 0rpx 40rpx;
  line-height: 86rpx;
}

.charging-fee-total-pay-title {
  font-size: 28rpx;
  color: #262930;
  float: right;
}

.charging-fee-total-pay-value {
  font-size: 32rpx;
  color: #45bb81;
  float: right;
}

.charging-info-detail-value {
  float: right;
  font-size: 28rpx;
  color: #7c7e82;
}

.charging-fee {
  position: relative;
}

.arrow-img {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 20rpx;
  right: 10rpx;
}

.adContainer {
  width: 100%;
  height: 200rpx;
}
